<Window x:Class="ProjectSetupKit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProjectSetupKit" Height="128" Width="544" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60" />
        </Grid.ColumnDefinitions>
        <Label HorizontalAlignment="Stretch" Margin="10" Name="label1" VerticalAlignment="Center" FontSize="14" FontWeight="Bold">
            Name
        </Label>
        <Label Grid.Row="1" HorizontalAlignment="Stretch" Margin="10" Name="label2" VerticalAlignment="Center" FontSize="14">
            Location
        </Label>
        <TextBox Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" Margin="10" Name="tbProjectName" VerticalAlignment="Center" FontSize="14" FontWeight="DemiBold" Text="{Binding ProjectName, Mode=TwoWay}" TabIndex="0" />
        <TextBox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Margin="10" Name="tbLocation" VerticalAlignment="Center" FontSize="14" Text="{Binding Location, Mode=TwoWay}" TabIndex="1"/>
        <Button Content="..." Grid.Column="2" Grid.Row="1" Height="30" HorizontalAlignment="Center" Margin="5" Name="button1" VerticalAlignment="Center" Width="50" Command="{Binding ChooseLocationCommand}" TabIndex="2"/>
    </Grid>
</Window>
